<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="flowlayout">
        <attr name="flowautoselecteffect" format="boolean"/>
        <attr name="flowmaxselect" format="integer"/>
        <attr name="flowgravity">
            <enum name="left" value="-1" />
            <enum name="center" value="0" />
            <enum name="right" value="1" />
        </attr>
        <attr name="flowsingleline" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="GiraffeLoadingDialog">
        <attr name="minWidth" format="dimension" />
        <attr name="maxWidth" format="dimension"/>
        <attr name="minHeight" format="dimension" />
        <attr name="maxHeight" format="dimension"/>
        <attr name="indicatorName" format="string"/>
        <attr name="indicatorColor" format="color"/>
    </declare-styleable>

</resources>