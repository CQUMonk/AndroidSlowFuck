<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey">
    <TextView
        android:id="@+id/tv_storage_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:padding="6dp"
        android:layout_margin="2dp"
        android:background="@color/whitesmoke"/>
    <EditText
        android:id="@+id/et_storage_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="请输入Key"
        android:textSize="20sp"
        android:padding="6dp"
        android:layout_margin="2dp"
        android:background="@color/whitesmoke"/>

    <EditText
        android:id="@+id/et_storage_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="请输入Value"
        android:textSize="20sp"
        android:padding="6dp"
        android:layout_margin="2dp"
        android:background="@color/whitesmoke"/>


    <Button
        android:id="@+id/btn_storage_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="存储数据"/>

    <Button
        android:id="@+id/btn_storage_read"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="读取数据"/>
    <Button
        android:id="@+id/btn_storage_clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="清理数据"/>
    <Button
        android:id="@+id/btn_storage_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="文件大小"/>


</LinearLayout>